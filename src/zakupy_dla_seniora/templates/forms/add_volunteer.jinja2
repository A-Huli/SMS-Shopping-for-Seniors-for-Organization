{% extends 'base.jinja2' %}
{% block content %}
    {% if message %}
        <p>{{ message }}</p>
    {% endif %}
    <div class="uk-container uk-container-small uk-position-relative">
        <form method="POST" action="">
            {{ form.hidden_tag() }}
            <fieldset class="form-group">

                <div class="form-group">
                    {{ form.first_name.label(class="form-control-label") }}
                    {% if form.first_name.errors %}
                        {{ form.first_name(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.first_name.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.first_name(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.last_name.label(class="form-control-label") }}
                    {% if form.last_name.errors %}
                        {{ form.last_name(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.last_name.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.last_name(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.phone_number.label(class="form-control-label") }}
                    {% if form.phone_number.errors %}
                        {{ form.phone_number(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.phone_number.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.phone_number(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.email.label(class="form-control-label") }}
                    {% if form.email.errors %}
                        {{ form.email(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.email.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.email(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.town.label(class="form-control-label") }}
                    {% if form.town.errors %}
                        {{ form.town(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.town.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.town(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form.district.label(class="form-control-label") }}
                    {% if form.district.errors %}
                        {{ form.district(class="uk-input uk-form-width-medium") }}
                        <div class="invalid-feedback">
                            {% for error in form.district.errors %}
                                <span>{{ error }}</span>
                            {% endfor %}
                        </div>
                    {% else %}
                        {{ form.district(class="uk-input uk-form-width-medium") }}
                    {% endif %}
                </div>

                {% if current_user.is_superuser %}
                    <div class="form-group">
                        {{ form.organisation.label(class="form-control-label") }}
                        {% if form.organisation.errors %}
                            {{ form.organisation(class="uk-input uk-form-width-medium") }}
                            <div class="invalid-feedback">
                                {% for error in form.organisation.errors %}
                                    <span>{{ error }}</span>
                                {% endfor %}
                            </div>
                        {% else %}
                            {{ form.organisation(class="uk-input uk-form-width-medium") }}
                        {% endif %}
                    </div>
                {% endif %}

            </fieldset>
            <div class="form-group">
                {{ form.submit(class="uk-input uk-form-width-small") }}
            </div>
        </form>
    </div>
{% endblock content %}