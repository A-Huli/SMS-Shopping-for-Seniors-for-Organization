{% extends 'base.jinja2' %}
{% block content %}
<div class="uk-container uk-container-small uk-position-relative">
    {% if message %}
        {% if error %}
            <div class="uk-alert-danger uk-alert" uk-alert>
        {% else %}
            <div class="uk-alert-success" uk-alert" uk-alert>
        {% endif %}
            <a class="uk-alert-close uk-icon uk-close" uk-close></a>
        <p>{{ message }}</p>
    </div>
    {% endif %}
    <form method="POST" action="" class="uk-form-stacked">
        {% for label, name, placeholder, type in fields %}
            <div class="uk-margin">
                <div>
                    <div class="uk-form-label">
                        <label for="{{ name }}">{{ label }}</label>
                    </div>
                    <div class="uk-form-controls"   >
                        <input class="uk-input uk-form-width-medium" required="required"
                               id="{{ name }}" type="{{ type }}" name="{{ name }}" placeholder="{{ placeholder }}">
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="uk-margin" >
            <input class="uk-input uk-form-width-small" type="submit" value="Submit">
        </div>
    </form>
</div>
{% endblock %}