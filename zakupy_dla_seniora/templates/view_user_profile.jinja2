{% extends 'base.jinja2' %}

{% block title %}
<title>{{ _('Profile view')}}</title>
{% endblock title %}

{% block content %}

<h1 class="uk-text-center">{{ user.username}}</h1>
<div class="uk-container uk-margin-large-top" id="board" style="height: 100vh;">
    <h3>{{_('Orders processed by you.')}}</h3>
    {% for message in messages %}
        {% if message['status'] == 'error' %}
             <div class="uk-margin uk-card uk-card-hover uk-card-default uk-card-body uk-margin-auto" style="background-color: #f8f8f8;">
                <h3 class="uk-card-title">{{ d['message_location'] }}</h3>
                <p> <span
                            class="uk-label-success"
                            style="padding: 5px;">{{_('Location')}} {{ message['error'] }}</span></p>


                <p>{{ message['content'] }}</p>


            </div>
        {% elif not message['status'] == 'ended' %}
            <div class="uk-margin uk-card uk-card-hover uk-card-default uk-card-body uk-margin-auto">
                <h3 class="uk-card-title">{{ message['location'] }}</h3>
                {% if not message['status'] == 'taken' %}
                    <a href="{{ url_for('messages.end_message', id = message['id']) }}" style="float: right;" align="right"
                       class="uk-button uk-button-primary uk-margin-left">{{_('End')}}
                    </a>
                {% endif %}

                <p>{{ message['content'] }}</p>
                {% if  message['location'] %}
                    <p> <span
                            class="uk-label-success"
                            style="padding: 5px;">{{_('Location')}} {{ message['location'] }}</span></p>
                {% endif %}

                {% if message['status'] == 'taken' %}
                    <p><span
                            class="uk-label-warning" style="padding: 5px;"> {{_('Status : Waiting for approval and exact location from senior')}}</span>
                    </p>
                {% endif %}
                {% if message['status'] == 'waiting for feedback' %}
                    <p><span
                            class="uk-label-warning" style="padding: 5px;"> {{_('Status : Waiting for senior approval of delivery')}}</span>
                    </p>
                {% endif %}

            </div>
        {% endif %}
    {% endfor %}
    <h3>{{_('Completed orders')}}</h3>
    {% for message in messages %}
        {% if message['status'] == 'ended' %}
            <div class="uk-margin uk-card-default uk-card-body uk-margin-auto" style="background-color: #f8f8f8;">
{#                <h3 class="uk-card-title">{{ d['message_location'] }}</h3>#}


                <p>{{ message['content'] }}</p>


            </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock content %}