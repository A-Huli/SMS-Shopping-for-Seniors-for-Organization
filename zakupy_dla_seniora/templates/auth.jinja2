{% extends "base.jinja2" %}

{% block title %}
    <title>{{ _('SMS Shopping for senior') }} - {{ _('Login') }}</title>
{% endblock title %}

{% block content %}
    <div class="uk-flex uk-flex-center uk-flex-middle uk-margin-top">
        <div class="uk-card-body uk-card-default">
            <h3 class="uk-card-title uk-text-center">{{ _('Log in to application') }}</h3>


            {% if message %}
                <div class="uk-alert-danger uk-alert" uk-alert>
                    <a class="uk-alert-close uk-icon uk-close" uk-close></a>
                    <p>{{ message }}</p>
                </div>
            {% endif %}


            <form method="POST" action="" class="uk-form-stacked">
                {{ form.hidden_tag() }}

                <div class="uk-margin">
                    <div class="uk-form-label">
                        {{ form.login.label(class="form-control-label") }}
                    </div>
                    <div class="uk-form-controls">

                        {{ form.login(class="uk-input uk-form-width-medium") }}
                    </div>
                </div>

                <div class="uk-margin">
                    <div class="uk-form-label">
                        {{ form.password.label(class="form-control-label") }}
                    </div>
                    <div class="uk-form-controls">

                        {{ form.password(class="uk-input uk-form-width-medium") }}
                    </div>
                </div>


                <div class="form-group">
                    {{ form.submit(class="uk-input uk-form-width-small") }}
                </div>
            </form>

        </div>
    </div>

{% endblock content %}